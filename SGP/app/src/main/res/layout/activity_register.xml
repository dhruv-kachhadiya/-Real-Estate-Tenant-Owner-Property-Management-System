<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#fff"
    android:focusableInTouchMode="true"
    android:gravity="center"
    tools:context=".Activities.SignInActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/viewParent.headerText.NoMode"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text=" Real Estate \n Property \n Management" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_login_page_image" />
            </RelativeLayout>

            <TextView
                android:id="@+id/text_view_LoginLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:layout_marginTop="10dp"
                android:textSize="30sp"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edit_text_Email"
                style="@style/parent"
                android:layout_marginTop="20dp"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/modifiedEditText"
                    android:hint="Email ID"
                    android:inputType="textEmailAddress"
                    android:textStyle="normal|bold" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edit_text_Password"
                style="@style/parent"
                app:errorEnabled="true"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/modifiedEditText"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textStyle="normal|bold" />
            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/button_Register"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Register"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textSize="20sp"
                android:textColor="#fff"
                android:background="@drawable/button_general"/>

            <TextView
                android:id="@+id/text_view_Login"
                style="@style/parent"
                android:layout_marginTop="30dp"
                android:text="Already have an Account? Login now"
                android:textAlignment="center"
                android:textColor="#11CFC5"
                android:textSize="17sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>






</RelativeLayout>